@model MovieForm



<div class="everything">
<div class="title">
    <br />
<h1>So you wanna add a new movie: </h1>
</div>
<div class="center">


<div class="form-container">
<form method="post">

    <input type="hidden" asp-for="MovieId" />
    <br />

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (MovieCategory c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.Category</option>
        }
    </select>
    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />

    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />

    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />

    <br />

    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <br />

    <label asp-for="Edited">Was the movie edited?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />

    <br />

    <label asp-for="CopiedToPlex">Copied to Plex?</label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" />
    <br />

    <button type="submit">submit</button>
    <div asp-validation-summary="All" style="font-family: noct;"></div>
</form>
 
</div>
</div>

</div>